    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "clima-api",
            "runtimeExecutable": "${workspaceFolder}/node_modules/nodemon/bin/nodemon.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index.js",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "dev",
                "PORT": "3001",
                "TZ": "utc"
            }
        }
    ]
}